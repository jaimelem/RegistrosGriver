@model IEnumerable<RegistrosGriver.Models.ContactoModel>

<p>
    @Html.ActionLink("Registrar", "AgregarEditarContacto")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombres)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellidos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Numero_tel)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombres)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Apellidos)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Numero_tel)
        </td>
        <td>
            @Html.ActionLink("Editar", "AgregarEditarContacto", new { id = item.Id_contacto }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Eliminar", "EliminarContacto", new { id = item.Id_contacto }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
