@model IEnumerable<RegistrosGriver.Models.ClientesModel>

@{
    ViewBag.Title = "ListaClientes";
}

<h2>ListaClientes</h2>

<p>
    @Html.ActionLink("Registrar", "AgregarEditarCliente")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombres)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellidos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha_registro)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sexo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Region)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellidos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha_registro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sexo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Region)
            </td>
            <td>
                @Html.ActionLink("Editar", "AgregarEditarCliente", new { id = item.Id_cliente }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Eliminar", "EliminarCliente", new { id = item.Id_cliente }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }
</table>
